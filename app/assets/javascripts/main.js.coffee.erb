#= depend_on_asset "leagues.html"

@hashbg_sports = angular.module('hashbg_sports', ['ngRoute'])

# otherwise here sets the default route
@hashbg_sports.config(['$routeProvider', '$httpProvider', ($routeProvider, $httpProvider) ->
  $httpProvider.defaults.useXDomain = true
  delete $httpProvider.defaults.headers.common['X-Requested-With']
  $routeProvider.
    when('/leagues', {
      templateUrl: '<%= asset_path("leagues.html") %>'
      controller: 'LeaguesCtrl'
    }).
    otherwise({
       templateUrl: '<%= asset_path("leagues.html") %>'
       controller: 'LeaguesCtrl'
    }) 
])
